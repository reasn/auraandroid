<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!-- Used by switch -->
        <!--<item name="colorAccent">@color/purple</item>-->
        <!--<item name="colorPrimary">@color/purple</item>-->
    </style>

    <style name="FullWidthDialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.7</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
        <!-- Optional, on Android 5+ you can modify the colorPrimaryDark color to match the windowBackground color for further branding-->
        <item name="colorPrimaryDark">@color/purple</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/blue</item>
        <item name="android:shadowRadius">0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:elevation">0dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:elevation">0dp</item>
        <!--<item name="android:theme">@style/ThemeOverlay.AppCompat.ActionBar</item>-->

    </style>

    <style name="StatusItemSummary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">6dp</item>
    </style>

    <!--TODO adjust font size to available width-->
    <style name="MonoSpaceEdit">
        <item name="android:ems">14</item>
        <item name="android:gravity">top</item>
        <item name="android:typeface">monospace</item>
        <item name="android:padding">6dp</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:minLines">5</item>

        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:scrollbars">vertical</item>
    </style>

    <style name="MonoSpaceView" parent="MonoSpaceEdit">
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:longClickable">false</item>
    </style>

    <style name="SloganView" parent="MonoSpaceView">
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
        <item name="android:typeface">normal</item>
        <item name="android:padding">6dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:minLines">1</item>
    </style>
    <style name="SloganEdit" parent="MonoSpaceEdit">
        <!--From SloganView-->
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
        <item name="android:typeface">normal</item>
        <item name="android:minLines">1</item>
    </style>

    <style name="DialogFlatElement">
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
        <item name="android:elevation">0dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">0dp</item>
    </style>

    <style name="DialogTitle" parent="DialogFlatElement">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/blue</item>
    </style>

    <style name="DialogMessage" parent="DialogFlatElement">
        <item name="android:gravity">top</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">20dp</item>
    </style>

    <style name="DialogButton" parent="DialogFlatElement">
        <item name="android:gravity">center</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DialogConfirmButton" parent="DialogButton">
        <item name="android:background">@color/green</item>
    </style>

    <style name="DialogCancelButton" parent="DialogButton">
        <item name="android:background">@color/red</item>
    </style>

    <style name="SimpleHeading">
        <item name="android:padding">4dp</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HeadingItem">
        <item name="android:layout_marginTop">40dp</item>
        <!--<item name="android:background">@color/green</item>-->
        <item name="android:padding">6dip</item>
    </style>

    <style name="HeadingItemText">
        <item name="android:textSize">12sp</item>
        <item name="android:textAlignment">textStart</item>
        <!--<item name="android:background">@color/green</item>-->
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FullscreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

</resources>
