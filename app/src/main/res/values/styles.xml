<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!-- Used by switch -->
        <!--<item name="colorAccent">@color/purple</item>-->
        <!--<item name="colorPrimary">@color/purple</item>-->
    </style>

    <style name="FullWidthDialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.7</item>
    </style>

    <style name="AppTheme.Launcher">
        <!-- TODO add launch screen -->
        <item name="android:windowBackground">@color/purple</item>
        <!-- Optional, on Android 5+ you can modify the colorPrimaryDark color to match the windowBackground color for further branding-->
        <item name="colorPrimaryDark">@color/purple</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/blue</item>
        <item name="android:shadowRadius">0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:elevation">0dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:elevation">0dp</item>
        <!--<item name="android:theme">@style/ThemeOverlay.AppCompat.ActionBar</item>-->

    </style>

    <style name="StatusItemSummary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">6dp</item>
    </style>

    <style name="FlatElement">
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
        <item name="android:elevation">0dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">0dp</item>
    </style>

    <style name="FlatTitle" parent="FlatElement">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/blue</item>
    </style>

    <style name="FlatTitleText">
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="FlatMessage" parent="FlatElement">
        <item name="android:gravity">top</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">20dp</item>
    </style>

    <style name="FlatButton" parent="FlatElement">
        <item name="android:gravity">center</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="FlatButtonConfirm" parent="FlatButton">
        <item name="android:background">@color/green</item>
    </style>

    <style name="FlatButtonCancel" parent="FlatButton">
        <item name="android:background">@color/red</item>
    </style>

    <style name="SimpleHeading">
        <item name="android:padding">4dp</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HeadingItem">
        <item name="android:layout_marginTop">40dp</item>
        <!--<item name="android:background">@color/green</item>-->
        <item name="android:padding">6dip</item>
    </style>

    <style name="HeadingItemText">
        <item name="android:textSize">12sp</item>
        <item name="android:textAlignment">textStart</item>
        <!--<item name="android:background">@color/green</item>-->
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FullscreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="TutorialWrapper">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="TutorialOverlay">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="TutorialOverlay.Top" parent="TutorialOverlay">
        <item name="android:gravity">bottom</item>
    </style>

    <style name="TutorialText">
        <item name="android:fontFamily">@font/rancho_regular</item>
        <item name="android:textColor">@color/yellow</item>
    </style>

    <style name="TutorialHeadlineWithArrow">
        <item name="android:layout_margin">20dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">right</item>
        <item name="android:layoutDirection">rtl</item>
    </style>


    <style name="TutorialHeadlineWithArrow.Left">
        <item name="android:layout_margin">20dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">left</item>
        <item name="android:layoutDirection">ltr</item>
    </style>

    <style name="TutorialHeadlineWithArrow.Top" parent="TutorialHeadlineWithArrow">
        <item name="android:layoutDirection">rtl</item>
    </style>

    <style name="TutorialHeadlineWithArrow.Left.Top" parent="TutorialHeadlineWithArrow.Left">
        <item name="android:layoutDirection">rtl</item>
    </style>


    <style name="TutorialHeadlineWithArrowArrow">
        <item name="android:background">@drawable/tutorial_arrow_up</item>
        <item name="android:scaleType">matrix</item>
    </style>

    <style name="TutorialHeadlineWithArrowArrow.Left" parent="TutorialHeadlineWithArrowArrow">
        <item name="android:scaleX">-1</item>
    </style>

    <style name="TutorialHeadlineWithArrowArrow.Top" parent="TutorialHeadlineWithArrowArrow">
        <item name="android:scaleY">-1</item>
    </style>

    <style name="TutorialHeadlineWithArrowArrow.Left.Top" parent="TutorialHeadlineWithArrowArrow">
        <item name="android:scaleY">-1</item>
        <item name="android:scaleX">-1</item>
    </style>

    <style name="TutorialHeadlineText" parent="TutorialText">
        <item name="android:layout_margin">20dp</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="TutorialHeadlineWithArrowText" parent="TutorialText">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="TutorialHeadlineWithArrowText.Bottom" parent="TutorialHeadlineWithArrowText">
        <item name="android:paddingTop">40dp</item>
    </style>

    <style name="TutorialHeadlineWithArrowText.Top" parent="TutorialHeadlineWithArrowText">
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="TutorialMessage" parent="TutorialText">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:layout_below">@id/tutorial_heading</item>
    </style>

    <style name="TutorialMessage.Bottom" parent="TutorialMessage">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_below">@id/tutorial_heading</item>
    </style>

    <style name="TutorialMessage.Top" parent="TutorialMessage">
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="TutorialButtonWrapper">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="TutorialButtonWrapper.Top" parent="TutorialButtonWrapper">
        <item name="android:layout_alignParentBottom">false</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>

    <style name="TutorialButton" parent="FlatButton">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/dark_yellow</item>
        <item name="android:layout_weight">1</item>
    </style>

</resources>
