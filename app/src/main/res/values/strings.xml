<resources>
    <string name="app_name">Aura</string>

    <string name="default_slogan">:ghost: I just installed Aura. Let\'s see what to make of it. :fire:</string>

    <string name="ui_main_share_text">Hey check out my app at: https://www.auraapp.io</string>

    <!--Toolbar-->
    <string name="ui_toolbar_enable_on">On\u00A0\u00A0</string>
    <string name="ui_toolbar_enable_off">Off\u00A0\u00A0</string>
    <string name="ui_toolbar_help">Help</string>
    <string name="ui_toolbar_refresh">Refresh</string>

    <!--Permissions Missing Activity-->
    <string name="ui_permissionsMissing_text">Aura can only work with some basic permissions.\n\nDon\'t worry, no data will be transmitted via the internet. \nYou are safe.</string>
    <string name="ui_permissionsMissing_request">:fire: Give Aura Location Access</string>
    <string name="ui_permissionsMissing_second_text">If clicking the button above doesn\'t work, you have to manually grant Aura the necessary permissions.\nPlease click the button below, then "Permissions" and grant Aura access to your location.</string>
    <string name="ui_permissionsMissing_appSettings">:pencil: Open App Settings</string>

    <!--Main Activity-->
    <string name="ui_main_add_slogan">:heavy_plus_sign: Add my own thought</string>


    <string name="ui_main_toast_debug_view_enabled">Debug view enabled</string>
    <string name="ui_main_toast_debug_view_disabled">Debug view disabled</string>

    <string name="ui_main_toast_slogan_already_adopted">This thought is already in your Aura</string>
    <string name="ui_main_toast_cannot_add_no_space_available">Please delete on of your :thought_balloon: before adding a new one</string>
    <string name="ui_main_toast_adopted">:fire: Thought adopted</string>
    <string name="ui_main_toast_replaced">:memo: Thought changed</string>
    <string name="ui_main_toast_dropped">:wastebasket: Thought removed</string>

    <string name="ui_main_toast_refresh_no_peers">Refreshing …</string>
    <plurals name="ui_main_toast_refresh">
        <item quantity="one">Refreshing nearby :thought_balloon: …</item>
        <item quantity="other">Refreshing nearby :thought_balloon: …</item>
    </plurals>

    <string name="ui_main_status_communicator_bt_restart_required_heading">Bluetooth Crashed</string>
    <string name="ui_main_status_communicator_bt_restart_required_text">Error: ##error##
        \nMany devices (including yours) have issues with Bluetooth crashing.
    \nPlease disable Bluetooth and activate it again.
    \nIf that doesn\'t solve the issue, try restarting your device.
    \nThis problem is not caused by Aura. Sorry about this!</string>

    <string name="ui_main_status_communicator_bt_disabled_heading">Bluetooth Off</string>
    <string name="ui_main_status_communicator_bt_disabled_text">Please enable Bluetooth to turn your Aura on.</string>

    <string name="ui_main_status_summary_communicator_bt_turning_on">:hourglass: Bluetooth is starting.</string>
    <string name="ui_main_status_summary_communicator_on_not_active">:hourglass: Aura is getting ready.</string>
    <string name="ui_main_status_summary_communicator_on">Your Aura is on - people see you :sunglasses:</string>
    <plurals name="ui_main_status_summary_peers">
        <item quantity="one">One :silhouette_head: nearby.</item>
        <item quantity="other">%d :silhouette_head: nearby.</item>
    </plurals>

    <string name="ui_main_status_communicator_ble_not_supported_heading">Device Unsupported</string>
    <string name="ui_main_status_communicator_ble_not_supported_text">Your device doesn\'t properly support Bluetooth LE.
        \nWe\'re really sorry, you can\'t use Aura.
        \nThis is a hardware issue and won\'t change in the future.</string>

    <string name="ui_main_status_communicator_disabled_heading">Your Aura is off</string>
    <string name="ui_main_status_communicator_disabled_text">You\'re invisible and receive no updates.</string>

    <string name="ui_main_status_communicator_advertising_not_supported_heading">You\'re invisible.</string>
    <string name="ui_main_status_communicator_advertising_not_supported_text">Your device supports seeing others but not showing your Aura.
        \nThis is a hardware issue and won\'t change in the future.</string>

    <string name="ui_main_status_peers_no_peers_heading">Nobody Around</string>
    <string name="ui_main_status_peers_no_peers_text">Make it more exciting - invite people!</string>
    <string name="ui_main_status_peers_no_peers_heading_cta">:fire: Invite Friends!</string>
    <string name="ui_main_status_peers_no_peers_heading_text_below_button">Should be seeing someone?
        \nTry turning Bluetooth off and on again.
    </string>
    <string name="ui_main_status_peers_not_scanning_heading">Your Aura is off</string>
    <string name="ui_main_status_peers_not_scanning_text">Turn on your Aura to see the :thought_balloon: of others.</string>

