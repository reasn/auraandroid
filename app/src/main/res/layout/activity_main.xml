<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom|end"
    android:orientation="vertical"
    tools:context="io.auraapp.auraandroid.main.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/Toolbar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <!--TODO move explanation and add item into recycler to make it scrollable-->
    <TextView
        android:id="@+id/communicator_state_explanation"
        style="@style/ExplanationBox"
        android:visibility="gone" />

    <!--TODO move explanation and add item into recycler to make it scrollable-->
    <TextView
        android:id="@+id/peers_state_explanation"
        style="@style/ExplanationBox"
        android:visibility="gone" />

    <Button
        android:id="@+id/add_slogan"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ui_main_add_slogan" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>
</LinearLayout>