<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom|end"
    tools:context="io.auraapp.auraandroid.main.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Switch
            android:id="@+id/aura_enabled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ui_enable_aura_on"
            android:textOff="@string/ui_enable_aura_off" />

        <Button
            android:id="@+id/show_help"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ui_show_help" />

        <Button
            android:id="@+id/add_slogan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ui_add_slogan" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
