<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.auraapp.auraandroid.PermissionMissingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/permission_explanation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aura can only work with the location permission granted. Remember: Aura doesn't require internet to work and doesn't use it to exchange data. You are safe." />

        <Button
            android:id="@+id/show_permission_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Grant Necessary Permissions"
            />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
